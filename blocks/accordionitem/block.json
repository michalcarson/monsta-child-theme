{
    "apiVersion": 2,
    "title": "Accordion Item",
    "description": "Inner segment of an accordion control, implemented with Bootstrap.",
    "name": "monsta/accordionitem",
    "category": "monsta",
    "icon": "media-spreadsheet",
    "editorScript": "file:./block.js",
    "editorStyle": "file:./block.css",
    "style": "file:./view.css",
    "supports": {
        "color": true,
        "html": false
    },
    "attributes": {
        "id": {
            "type": "string",
            "source": "attribute",
            "attribute": "id",
            "selector": "div.accordion-collapse"
        },
        "parentId": {
            "type": "string",
            "source": "attribute",
            "attribute": "data-bs-parent",
            "selector": "div.accordion-collapse"
        },
        "title": {
            "type": "string",
            "source": "text",
            "selector": "button",
            "default": "Heading"
        },
        "open": {
            "type": "boolean",
            "default": false
        },
    "parent": ["monsta/accordion"],
    "usesContext": ["monsta/accordionParentId"]
    }
}
